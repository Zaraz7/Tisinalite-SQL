<Window x:Class="Tisinalite.Pages.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tisinalite.Pages"
        mc:Ignorable="d"
        Title="Input" Height="140" Width="200" MinHeight="120" SizeToContent="Height">
    <StackPanel VerticalAlignment="Center" Margin="2">
        <TextBlock x:Name="messege" TextAlignment="Center" TextWrapping="Wrap"/>
        <TextBlock x:Name="warning" Visibility="Collapsed" Foreground="Red" TextAlignment="Center" TextWrapping="Wrap"/>
        <TextBox x:Name="inputEntry" Margin="10"/>
        <Button Content="Ок" Width="50" Click="Ok_Click"/>
    </StackPanel>
</Window>
